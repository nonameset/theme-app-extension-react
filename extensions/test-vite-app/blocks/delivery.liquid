      <div>
        <div class="tw-font-semibold tw-text-sm">Kostenlose Lieferung</div>
        {%- assign date_format = '%A, %B %d' -%}
    
        <div class="tw-text-xs tw-font-light tw-text-gray-700">
          <span class="tw-mr-1 tw-font-semibold">Lieferung:</span>
    
          {%- assign todayDate = 'now' | date: '%w' -%}
          {%- if todayDate == '5' -%}
            {{ 'now' | date: '%s' | plus: 259000 | date: date_format }} -
            {{ 'now' | date: '%s' | plus: 509200 | date: date_format }}
    
          {%- elsif todayDate == '6' -%}
            {{ 'now' | date: '%s' | plus: 259000 | date: date_format }} -
            {{ 'now' | date: '%s' | plus: 509200 | date: date_format }}
          {%- elsif todayDate == '7' -%}
            {{ 'now' | date: '%s' | plus: 259000 | date: date_format }} -
            {{ 'now' | date: '%s' | plus: 509200 | date: date_format }}
          {%- elsif todayDate == '1' -%}
            {{ 'now' | date: '%s' | plus: 259000 | date: date_format }} -
            {{ 'now' | date: '%s' | plus: 604000 | date: date_format }}
          {%- elsif todayDate == '2' -%}
            {{ 'now' | date: '%s' | plus: 172000 | date: date_format }} -
            {{ 'now' | date: '%s' | plus: 509200 | date: date_format }}
          {%- elsif todayDate == '3' -%}
            {{ 'now' | date: '%s' | plus: 172000 | date: date_format }} -
            {{ 'now' | date: '%s' | plus: 509200 | date: date_format }}
          {%- elsif todayDate == '4' -%}
            {{ 'now' | date: '%s' | plus: 259000 | date: date_format }} -
            {{ 'now' | date: '%s' | plus: 509200 | date: date_format }}
          {% endif %}
        </div>
      </div>
    </div>
    
</div>
  
